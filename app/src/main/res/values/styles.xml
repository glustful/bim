    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>


        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>

    </style>


    <style name="Theme_Activity_Animation" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/back_right_out</item>
    </style>

    <style name="popupAnimation" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/back_left_in</item>
        <item name="android:windowExitAnimation">@anim/back_right_out</item>
    </style>
    <style name="toolsPopupAnimation" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/push_right_in</item>
        <item name="android:windowExitAnimation">@anim/back_right_out</item>
    </style>


</resources>
